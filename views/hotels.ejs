<!DOCTYPE html>
<html>
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/stylesheets/hotels.css" rel="stylesheet">
</head>

<body>

  <h2 class="p-3">Choose a hotel</h2>

  <div class="list-group">

    <% 
      // Loop through all hotels sent from the router
      // This "hotels" array comes from:
      // res.render('hotels', { hotels: hotels })

      hotels.forEach(function(hotel) { 
    %>

      <div class="row px-3 py-1 w-100">

        <span class="col py-1 bg-info">

          <% // Print hotel name %>
          <%= hotel.Name %>

          <span class="right">
            <% // Print hotel location %>
            <%= hotel.Location %>
          </span>

        </span>

        <% // Link to rooms for this hotel %>
        <a href="/rooms/<%= hotel.id %>" 
           class="col btn btn-secondary">
          Rent a room
        </a>

        <% // Link to hotel details %>
        <a href="/hotels/<%= hotel.id %>" 
           class="col btn btn-secondary">
          Details
        </a>

        <% // Button to delete this hotel (calls JS function in deleteHotel.js) %>
        <button 
            onclick="deleteHotel('/hotels', '<%= hotel.id %>')"
            class="col btn btn-danger">
            Delete
         </button>


      </div>

    <% 
      // End of loop
      }); 
    %>

  </div>

  <br>

  <% // Button to add a new hotel (calls addHotel.js) %>
  <button onclick="addHotel('/hotels')" class="btn btn-success">


  <% // Load frontend JavaScript files from public/javascripts %>
  <script src="/javascripts/addHotel.js"></script>
  <script src="/javascripts/deleteHotel.js"></script>

</body>
</html>

